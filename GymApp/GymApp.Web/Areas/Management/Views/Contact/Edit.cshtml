@model Contact

<div class="row">
    <div class="col-12">
        <div class="card border-top border-0 border-4 border-dark">
            <div class="card-body p-5">
                <div class="card-title text-center">
                    <h5 class="mb-5 mt-2 text-dark">İletişim Bilgilerini Düzenle</h5>
                </div>
                <hr>
                <form class="row g-3" method="post">
                    <input type="hidden" asp-for="Id">
                    <div class="col-12">
                        <label asp-for="Title" class="form-label">Başlık</label>
                        <input type="text" class="form-control border-start-0" asp-for="Title" placeholder="Başlık">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <input type="Description" class="form-control border-start-0" asp-for="Description" placeholder="Açıklama">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="InstagramRedirectUrl" class="form-label">InstagramUrl</label>
                        <input type="text" class="form-control border-start-0" asp-for="InstagramRedirectUrl" placeholder="İnstagramUrl">
                        <span class="text-danger" asp-validation-for="InstagramRedirectUrl"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="XRedirectUrl" class="form-label">InstagramUrl</label>
                        <input type="text" class="form-control border-start-0" asp-for="XRedirectUrl" placeholder="XUrl">
                        <span class="text-danger" asp-validation-for="XRedirectUrl"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="LinkedinRedirectUrl" class="form-label">LinkedinUrl</label>
                        <input type="text" class="form-control border-start-0" asp-for="LinkedinRedirectUrl" placeholder="LinkedinUrl">
                        <span class="text-danger" asp-validation-for="LinkedinRedirectUrl"></span>
                    </div>

                    <div class="col-12">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark btn-lg px-5">Kaydet</button>
                        </div>
                    </div>
                 
                </form>
              
            </div>
        </div>
    </div>
</div>
